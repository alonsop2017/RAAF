[Unit]
Description=RAAF Web Application (FastAPI)
After=network.target

[Service]
Type=simple
User=alonsop
WorkingDirectory=/home/alonsop/RAAF
Environment="PATH=/home/alonsop/RAAF/venv/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=/home/alonsop/RAAF/venv/bin/python3 -m uvicorn web.app:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
